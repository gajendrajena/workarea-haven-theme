      Button Element
      = inline_svg('workarea/storefront/icons/long_arrow.svg', class: 'button__icon')

  .style-guide__example-block
    = button_tag class: 'button' do
      Button Element
      = inline_svg('workarea/storefront/icons/long_arrow.svg', class: 'button__icon')

  .style-guide__example-block
